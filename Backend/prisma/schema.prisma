generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            Int      @id @default(autoincrement())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @default(now())
  userName      String
  email         String   @unique
  password      String
  course        Course[]
  rating        UserOnCourseRating[]
  enrolled      UserOnTopic[]
}

model Category{
  id            Int         @id @default(autoincrement())
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  title         String      @unique
  course        Course[]
}

model Course {
  id            Int         @id @default(autoincrement())
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  title         String
  name          String
  authorId      Int
  categoryId    Int
  author        User        @relation(fields: [authorId], references: [id], onDelete: Cascade)
  category      Category    @relation(fields: [categoryId], references: [id], onDelete: Cascade)
}

model Topic {
  id            Int         @id @default(autoincrement())
  topicId      Int         @unique
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  title         String
  description   String
  price         Float       @default(0)
  revisedPrice  Float       @default(0)
  thumbnail     String
  content       Content?
  requirements  Requirements[]
  rating        UserOnCourseRating[]
  enrolledBy    UserOnTopic[]
}

model Content {
  id            Int         @id @default(autoincrement())
  topicId       Int         @unique
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  topic         Topic      @relation(fields: [topicId], references: [id], onDelete: Cascade)
}

model Requirements{
  id            Int         @id @default(autoincrement())
  topicId       Int         @unique
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  topic         Topic      @relation(fields: [topicId], references: [id], onDelete: Cascade)
}

model Rating {
  id          Int                   @id @default(autoincrement())
  value       Float
  review      String
  course      UserOnCourseRating[]
}

model UserOnCourseRating {
  topicId      Int         
  ratingId      Int         
  userId        Int         
  topic         Topic      @relation(fields: [topicId], references: [id], onDelete: Cascade)
  rating        Rating      @relation(fields: [ratingId], references: [id], onDelete: Cascade)
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt     DateTime    @default(now())

  @@id([topicId, ratingId, userId])
}

model UserOnTopic {
  topicId      Int         
  userId        Int         
  topic         Topic      @relation(fields: [topicId], references: [id], onDelete: Cascade)
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt    DateTime     @default(now())

  @@id([topicId, userId])
}